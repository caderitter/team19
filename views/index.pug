extends layout

block content
  
  div.container
    h1= title
    p Welcome to #{title}
    form(method='POST' action='/tone').mt-5
      div.form-group
        label(for='tone') Tone:
        input#tone.form-control(type='textarea', placeholder='JSON' name='toneInput')
      button.btn.btn-primary(type='submit') Analyze tone

    form(method='POST' action='/nlu').mt-5
      div.form-group
        label(for='nlu') NLU:
        input#nlu.form-control(type='textarea', placeholder='Text' name='nluInput')
      button.btn.btn-primary(type='submit') NLU

    form(method='POST' action='/tone/twitter').mt-5
      div.form-group
        label(for='tweet') Hashtag:
        input#tweet.form-control(type='text', placeholder='Twitter search' name='tweetInput')
      button.btn.btn-primary(type='submit') Analyze twitter sentiment

